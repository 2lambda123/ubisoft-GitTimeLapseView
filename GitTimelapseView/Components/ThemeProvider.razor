@namespace GitTimelapseView

<HeadContent>
    @if (ThemingService?.Theme?.IsDark == true)
    {
        <link href="_content/AntDesign/css/ant-design-blazor.dark.css" rel="stylesheet" />
        <link href="css/theme.dark.css" rel="stylesheet" />
    }
    else
    {
        <link href="_content/AntDesign/css/ant-design-blazor.css" rel="stylesheet" />
        <link href="css/theme.light.css" rel="stylesheet" />
    }
    
    <link href="_framework/scoped.styles.css" rel="stylesheet" />
    <link href="GitTimelapseView.styles.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
</HeadContent>

@code {
    [Inject]
    ThemingService ThemingService { get; set; } = default!;
}
